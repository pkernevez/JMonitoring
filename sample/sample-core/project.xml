<project>
    <extend>${basedir}/../../MainProject/maven/project.xml</extend>
  
    <!-- identifiant du projet -->
    <id>sample_core</id>
  
    <!-- libellé du projet -->
    <name>Sample.</name>
    
    <!-- racine du package (syntaxe java) -->
    <package>org.jmonitoring</package>
    
    <description>
         This is a sample for the use of JavaMonitring.
    </description>
  
    <!--build>
        <aspectSourceDirectory>src/test/java</aspectSourceDirectory>
    </build-->
    <build>
        <sourceDirectory>${basedir}/src/main/java</sourceDirectory>
        <unitTestSourceDirectory>${basedir}/src/test/bidon</unitTestSourceDirectory>
        <unitTest>
           <includes>
                <include>**/Test*.java</include>
                <include>**/*Test.java</include>
                <include>**/*.properties</include>
            </includes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test/resources</directory>
                    <includes>
                        <include>**/*.xml</include>
                        <include>**/*.properties</include>
                        <include>**/*.java</include>
                    </includes>
                </resource>            
            </resources>
        </unitTest>

        <resources>
            <resource>
                <directory>${basedir}/src/main/resources</directory>
                <includes>
                    <include>**/*.xml</include>
                    <include>**/*.properties</include>
                    <include>**/*.java</include>
                    <include>**/*.aj</include>
                </includes>
                <excludes>
                    <exclude>**/.svn</exclude>
                </excludes>
            </resource>
            
        </resources>
    
    </build>

    <!-- dépendances -->
    <dependencies>
    
        <dependency>
          <groupId>com.octo.opensource.jmonitoring</groupId>
          <artifactId>core_monitoring</artifactId>
          <version>${monitoring.version}</version>
          <url>http://octo.dnalias.com/maven</url>
            <properties>
                <aspectj.weaveWith>true</aspectj.weaveWith>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>

        <dependency>
          <groupId>com.octo.opensource.jmonitoring</groupId>
          <artifactId>sample_aspects</artifactId>
          <version>${monitoring.version}</version>
          <url>http://octo.dnalias.com/maven</url>
            <properties>
                <aspectj.weaveWith>true</aspectj.weaveWith>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>

        <dependency>
          <id>junit</id>
          <version>${depends.junit.version}</version>
          <url>http://www.junit.org/</url>
        </dependency>

        <dependency>
          <id>jmock</id>
          <version>${depends.jmock.version}</version>
          <url>http://jmock.codehaus.org</url>
        </dependency>

        <dependency>
          <id>log4j</id>
          <version>${depends.log4j.version}</version>
          <url>http://www.log4j.org/</url>
        </dependency>
        
        <dependency>
          <id>commons-logging</id>
          <version>${depends.commonslogging.version}</version>
          <url>http://www.apache.org/</url>
        </dependency>

        <dependency>
          <groupId>aspectj</groupId>
          <artifactId>aspectjrt</artifactId>
          <version>${depends.aspectj.version}</version>
          <url>http://eclipse.org/aspectj/</url>
        </dependency>

        <dependency>
          <id>hibernate</id>
          <version>${depends.hibernate.version}</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
          <url>http://www.hibernate.org</url>
        </dependency>

        <dependency>
          <id>antlr</id>
          <version>${depends.antlr.version}</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
          <url>http://www.ant.org</url>
        </dependency>

        <dependency>
            <groupId>hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
            <version>${depends.hsqldb.version}</version>
            <type>jar</type>
            <url>http://www.hsqldb.org</url>
        </dependency>

        <dependency>
            <groupId>dom4j</groupId>
            <artifactId>dom4j</artifactId>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
            <version>${depends.dom4j.version}</version>
            <type>jar</type>
        </dependency>

        <dependency>
            <groupId>ehcache</groupId>
            <artifactId>ehcache</artifactId>
            <version>${depends.ehcache.version}</version>
            <type>jar</type>
        </dependency>

        <dependency>
          <id>dbunit</id>
          <version>${depends.dbunit.version}</version>
          <url>http://www.dbunit.org/</url>
        </dependency>

        <dependency>
          <groupId>cglib</groupId>
          <artifactId>cglib-nodep</artifactId>
          <version>${depends.cglib.version}</version>
          <url>http://jmock.codehaus.org</url>
        </dependency>

        <dependency>
            <groupId>j2ee</groupId>
            <artifactId>j2ee</artifactId>
            <version>${depends.j2ee.version}</version>
            <type>jar</type>
            <url>http://java.sun.com</url>
        </dependency>
        
    </dependencies>
   
   <!--  Verrue pour pouvoir builder ! -->
  <reports>
        <report>maven-changes-plugin</report>
        <report>maven-changelog-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-checkstyle-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-jdepend-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-license-plugin</report>
        <report>maven-tasklist-plugin</report>
        <report>maven-clover-plugin</report>
        <!--report>maven-clover-plugin</report-->
        <report>maven-simian-plugin</report>
        <!--report>maven-findbugs-plugin</report-->
        <!--report>maven-pmd-plugin</report-->
        <!--report>maven-linkcheck-plugin</report-->
  </reports>    
       
</project>

