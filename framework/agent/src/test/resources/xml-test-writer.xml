<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <bean name="storeWriter" class="org.jmonitoring.agent.store.impl.XmlFileWriter" scope="prototype">
        <constructor-arg index="0" value="target/log"/>
        <constructor-arg index="1" ref="formater"/>
    </bean>
    <bean name="formater" class="org.jmonitoring.core.configuration.FormaterBean" scope="prototype">
        <property name="dateFormat" value="dd/MM/yy"/>
        <property name="timeFormat" value="HH:mm:ss"/>
    </bean>
    <bean name="storeManager" class="org.jmonitoring.agent.store.StoreManager" scope="prototype">
    </bean>
</beans>
