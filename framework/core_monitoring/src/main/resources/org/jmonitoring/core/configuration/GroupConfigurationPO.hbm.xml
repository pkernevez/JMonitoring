<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
   	<class name="org.jmonitoring.core.configuration.GroupConfigurationPO" table="CONFIGURATION_GROUP">
      <id name="id" column="ID" unsaved-value="-1">
         <generator class="native" />
      </id>

      <property name="groupName" unique="true" column="GROUP_NAME" type="java.lang.String" length="145"/>
      <property name="color" column="COLOR" type="java.lang.String" length="15"/>
      
	</class>	
</hibernate-mapping>

