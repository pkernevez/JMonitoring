<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.octo.opensource.jmonitoring</groupId>
        <artifactId>common-module-pom</artifactId>
        <version>1.1-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>console-web</artifactId>
    <name>Administration console</name>
    <description>This project provides an Administration console for Monitoring infrastructure.</description>
    <scm>
        <connection>scm:svn:http://forge.octo.com/svn/jmonitoring/trunk/framework/adminsitration_console</connection>
        <url>http://forge.octo.com/svn/jmonitoring/trunk/framework/adminsitration_console</url>
    </scm>
  
    <packaging>war</packaging>
    <dependencies>
       <dependency>
          <groupId>com.octo.opensource.jmonitoring</groupId>
          <artifactId>common</artifactId>
          <version>1.1-SNAPSHOT</version>
        </dependency>

       <dependency>
          <groupId>com.octo.opensource.jmonitoring</groupId>
          <artifactId>console-core</artifactId>
          <version>1.1-SNAPSHOT</version>
        </dependency>

       <dependency>
          <groupId>com.octo.opensource.jmonitoring</groupId>
          <artifactId>tests</artifactId>
          <version>1.1-SNAPSHOT</version>
          <scope>test</scope>
        </dependency>

       <dependency>
          <groupId>com.octo.opensource.jmonitoring</groupId>
          <artifactId>persistence</artifactId>
          <version>1.1-SNAPSHOT</version>
          <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>3.1</version>
        </dependency>

        <dependency>
          <groupId>displaytag</groupId>
          <artifactId>displaytag</artifactId>
          <version>1.0</version>
        </dependency>

        <dependency>
          <groupId>mysql</groupId>
          <artifactId>mysql-connector-java</artifactId>
          <version>5.0.3</version>
        </dependency>
        
        <dependency>
          <groupId>javax.servlet</groupId>
          <artifactId>servlet-api</artifactId>
          <version>2.3</version>
					<scope>provided</scope>
        </dependency>
        
       <dependency>
          <groupId>commons-fileupload</groupId>
          <artifactId>commons-fileupload</artifactId>
          <version>1.0</version>
        </dependency>

        <dependency>
            <groupId>struts</groupId>
            <artifactId>struts</artifactId>
            <version>1.2.4</version>
        </dependency>    
        
        <dependency>
            <groupId>struts-menu</groupId>
            <artifactId>struts-menu</artifactId>
            <version>2.3</version>
        </dependency>    
        
        <dependency>
            <groupId>strutstestcase</groupId>
            <artifactId>strutstestcase</artifactId>
            <version>2.1.2-1.1-2.3</version>
          <scope>test</scope>
        </dependency>    
        
        <dependency>
          <groupId>jmock</groupId>
          <artifactId>jmock</artifactId>
          <version>1.0.1</version>
          <scope>test</scope>
        </dependency>
        
        <dependency>
          <groupId>jmock</groupId>
          <artifactId>jmock-cglib</artifactId>
          <version>1.0.1</version>
          <scope>test</scope>
          <exclusions>
            <exclusion>
                <groupId>cglib</groupId>
                <artifactId>cglib-full</artifactId>
            </exclusion>
          </exclusions>
        </dependency>

       <dependency>
            <groupId>taglibs</groupId>
            <artifactId>standard</artifactId>
            <version>1.0.6</version>
        </dependency>    
        
        <dependency>
            <groupId>jfree</groupId>
            <artifactId>jfreechart</artifactId>
            <version>0.9.21</version>
        </dependency>    
        
        <dependency>
            <groupId>jfree</groupId>
            <artifactId>jcommon</artifactId>
            <version>0.9.6</version>
        </dependency>    
   
    </dependencies>
    
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copyweb</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <tasks>
		<echo>*** Project type = war =&gt; copy content of WEB-INF into bin-test and target/test-classes ***</echo>
		<copy todir="${basedir}/bin/WEB-INF">
			<fileset dir="${basedir}/src/main/webapp/WEB-INF" />
		</copy>
		<copy todir="${basedir}/target/test-classes/WEB-INF">
			<fileset dir="${basedir}/src/main/webapp/WEB-INF" />
		</copy>

                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>delete</id>
                        <phase>verify</phase>
                        <configuration>
                            <tasks>
                   	            <echo>*** Delete *** </echo>
                   	            <delete dir="${basedir}/classes" />
                   	            <delete dir="${basedir}/test-classes" />
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>deplo</id>
                        <phase>install</phase>
                        <configuration>
                            <tasks>
                                <echo> *** Copy to serveur ***</echo>
                   	            <copy file="target/${pom.artifactId}-${pom.version}.war" tofile="${application.server.deploy.dir}/${pom.artifactId}.war" />
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                <!--childDelegation>true</childDelegation-->
                <!--forkMode>pertest</forkMode-->
                    <!--argLine>-Xdebug -Xrunjdwp:transport=dt_socket,suspend=y,server=y,address=8001 -Xnoagent -Djava.compiler=NONE </argLine-->
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>