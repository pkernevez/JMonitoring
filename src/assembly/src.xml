<assembly>
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <moduleSets>
    <!-- Agents -->
    <moduleSet>
      <includes>
        <include>com.octo.opensource.jmonitoring:agent</include>
      </includes>
      <binaries>
        <useStrictFiltering>true</useStrictFiltering>
        <outputDirectory>agent</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>com.octo.opensource.jmonitoring:hibernate-aspect</include>
      </includes>
      <binaries>
        <useStrictFiltering>true</useStrictFiltering>
        <outputDirectory>agent/extension-sql</outputDirectory>
        <unpack>false</unpack>
        <excludes>
            <exclude>com.octo.opensource.jmonitoring:agent</exclude>
        </excludes>
      </binaries>
    </moduleSet>
    
    <!-- Console -->
    <moduleSet>
      <includes>
        <include>com.octo.opensource.jmonitoring:console-web</include>
      </includes>
      <binaries>
        <useStrictFiltering>true</useStrictFiltering>
        <includeDependencies>false</includeDependencies>
        <outputDirectory>/</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>

    <!-- Sample -->
    <moduleSet>
      <includes>
        <include>com.octo.opensource.jmonitoring:sample-web</include>
      </includes>
      <binaries>
        <useStrictFiltering>true</useStrictFiltering>
        <includeDependencies>false</includeDependencies>
        <outputDirectory>/</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>

    <!-- Files -->
    <fileSets>
        <fileSet>
            <directory>src/assembly</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>LICENSE.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/assembly/conf/tomcat</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>console-web.xml</include>
                <include>sample-web.xml</include>
            </includes>
        </fileSet>
    </fileSets>
            
</assembly>